{
    "name": "Poetry",
    "image": "mcr.microsoft.com/devcontainers/python:3",
    "features": {
        "ghcr.io/devcontainers-contrib/features/poetry:2": {}
    },
    "containerEnv": {
        "TZ": "Asia/Tokyo"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "GitHub.copilot",
                "ms-python.black-formatter",
                "ms-python.isort"
            ]
        }
    },
    "onCreateCommand": [
        "poetry install"
    ]
}
